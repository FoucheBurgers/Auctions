@model IEnumerable<Auctions.Models.tblRoll>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

@using (@Html.BeginForm("Index", "RollAdmin", FormMethod.Get))
{
    <table class="table">
        <tr>
            <th>
                @Html.DropDownList("AuctionID", null, "Select Auction", htmlAttributes: new { onchange = "this.form.submit();" })
            </th>
        </tr>
    </table>
}
<p>
    @Html.ActionLink("Create New", "Create")
</p>


<table class="table">
    <tr>
        <th></th>
        <th>
            @Html.DisplayNameFor(model => model.ltRollDescription.Description)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Lot)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.ltSpecy.Description)
        </th>
        <th>
            Seller
        </th>

        <th>
            On Auction
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sold)
        </th>

        <th>
            Action
        </th>
        <th></th>
    </tr>

    @{int i = 1; }
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @(i++)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.ltRollDescription1.Description)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Lot)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.ltSpecy.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tblCustomer1.CompanyName)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.OnAuction)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sold)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ID })
            </td>
        </tr>
    }

</table>
