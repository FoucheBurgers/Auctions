@model Auctions.Models.tblRoll

@{
    ViewBag.Title = "Edit";
}
@Html.ValidationSummary(true, "", new { @class = "text-danger" })
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(model => model.ID)
    @Html.HiddenFor(model => model.BiddingPrice)
    @Html.HiddenFor(model => model.Increments)
    @Html.HiddenFor(model => model.Quantity)
    @Html.HiddenFor(model => Model.ltSpecy.Description)
    @Html.HiddenFor(model => Model.DateTimeBid)
    @Html.HiddenFor(model => Model.DateTimeClose)
    @Html.HiddenFor(model => Model.RollId)
    @Html.HiddenFor(model => Model.Lot)
    @Html.HiddenFor(model => Model.SellerId)



    <head>

        <meta charset="UTF-8">

        <title>Silent Auction</title>

        <style type="text/css">
            body {
                background-color: #000000;
            }

            body, td, th {
                color: #FFFFFF;
                font-family: "Gill Sans", "Gill Sans MT", "Myriad Pro", "DejaVu Sans Condensed", Helvetica, Arial, sans-serif;
                font-style: normal;
                font-weight: normal;
                font-size: 10px;
                text-align: center;
            }
        </style>
    </head>


    <body>
        <table width="1000" border="1" align="center" cellpadding="6">
            <tbody>
                <tr style="text-align: left; font-size: 16px;">
                    <td width="650" rowspan="3"><img src="@Url.Content(Model.PictureName)" width="650" height="494" alt="IMAGES" /></td>

                    <td width="334">
                        <p style="font-size: 18px; font-weight: bolder; color:  #F4080C">LOT : @Html.DisplayFor(model => model.Lot, new { htmlAttributes = new { @class = "form-control" } })</p>

                        <p style="font-size: 16px; font-weight: bolder;"> @Html.DisplayFor(modelItem => Model.ltSpecy.Description)

                        <p style="font-size: 16px; font-weight: bolder;">Age/DOB : @Html.DisplayFor(model => model.Age, new { htmlAttributes = new { @class = "form-control" } })</p>


                        <p style="font-size: 16px; font-weight: bolder;">Horn Length : @Html.DisplayFor(model => model.HornLength, new { htmlAttributes = new { @class = "form-control" } })</p>


                        <p style="font-size: 16px; font-weight: bolder;">Tip to Tip : @Html.DisplayFor(model => model.TipToTip, new { htmlAttributes = new { @class = "form-control" } })</p>


                        <p style="font-size: 16px; font-weight: bolder;">Other : @Html.DisplayFor(model => model.OtherInfo, new { htmlAttributes = new { @class = "form-control" } })</p>


                        <p style="font-size: 16px; font-weight: bolder;">Available : @Html.DisplayFor(model => model.DateAvailable, new { htmlAttributes = new { @class = "form-control" } })</p>

                        <p style="font-size: 16px; font-weight: bolder;">
                            Male : @Html.DisplayFor(model => model.Male, new { htmlAttributes = new { @class = "form-control" } })
                            , Female : @Html.DisplayFor(model => model.Female, new { htmlAttributes = new { @class = "form-control" } })
                            , Young : @Html.DisplayFor(model => model.Young, new { htmlAttributes = new { @class = "form-control" } })
                            , Total : @Html.DisplayFor(model => model.Quantity, new { htmlAttributes = new { @class = "form-control" } })

                        </p>
                    </td>
                </tr>

                <tr style="text-align: left">
                    <td align="center" valign="middle">
                        @*<p>&nbsp;</p>*@
                        <p style="font-size: 16px; font-weight: bolder;">BID PER  <span style="color: #F4080C">@Html.DisplayFor(model => model.Quantity_Lot, new { htmlAttributes = new { @class = "form-control" } })</span></p>
                        <p style="font-size: 16px; font-weight: bolder;">CURRENT BID UNIT PRICE: R <span style="color: #F4080C">@Html.DisplayFor(model => model.BiddingPrice, new { htmlAttributes = new { @class = "form-control" } })</span></p>

                        <p style="font-size: 16px; font-weight: bolder;">TOTAL BID VALUE: R <span style="color: #F4080C">@Html.DisplayFor(model => model.BidTotalPrice, new { htmlAttributes = new { @class = "form-control" } })</span></p>

                        @*<p>CURRENT BUYER: <span style="color: #F70105">@Html.DisplayFor(model => model.Bidder, new { htmlAttributes = new { @class = "form-control" } })</span></p>*@

                        @*<p>&nbsp;</p>*@
                    </td>
                </tr>
                <tr style="text-align: left">
                    <td>
                        <p>
                            NEW BID PER <span style="color: #F4080C">@Html.DisplayFor(model => model.Quantity_Lot, new { htmlAttributes = new { @class = "form-control" } })</span>
                        </p>

                        <p>
                        <p style="font-size: 16px; font-weight: bolder;">MINIMUM INCREMENT: R <span style="color: #F4080C">@Html.DisplayFor(model => model.Increments, new { htmlAttributes = new { @class = "form-control" } })</span></p>
                        @Html.EditorFor(model => model.NewBidPrice, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.NewBidPrice, "", new { @class = "text-danger" })
                        @Html.Raw(TempData["msg"])
                        <p>
                            <input type="submit" value="SUBMIT YOUR BID" class="btn btn-default" />
                        </p>
                    </td>
                </tr>
            </tbody>
        </table>
    </body>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
