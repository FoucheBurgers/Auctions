@model IEnumerable<Auctions.Models.BuyerNo>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>


@using (@Html.BeginForm("Index", "BuyerNumber", FormMethod.Get))
{
    <table class="table">
        <tr>
            <th>
                @Html.DropDownList("AuctionID", null, "Select Auction", htmlAttributes: new { @class = "form-control", onchange = "this.form.submit();" })
            </th>
            <th>
                Lot
            </th>
        </tr>
    </table>
}

<p>
    @Html.ActionLink("Create New", "Create", new { AuctionID = ViewBag.AuctionID})
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.BuyerNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.tblCustomer.CompanyName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ltRollDescription.Description)

        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.BuyerNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tblCustomer.CompanyName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ltRollDescription.Description)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}
</table>

